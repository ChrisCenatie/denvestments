<%= form_for :loan, url: "/admin/loans", html: { multipart: true } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :category %>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  <%= f.submit "Create Loan" %>
<% end %>
